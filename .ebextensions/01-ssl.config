files:
  "/home/ec2-user/01-ssl.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      listen 443 ssl;
      ssl_certificate /etc/letsencrypt/live/moehaemad.ca/fullchain.pem;
      ssl_certificate_key /etc/letsencrypt/live/moehaemad.ca/privkey.pem;


container_commands:
  00_move_file:
    command: "sudo mv -t /etc/nginx/conf.d/elasticbeanstalk/01-ssl.conf"
  nginx_reload:
     command: "sudo nginx -s reload"